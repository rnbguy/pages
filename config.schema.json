{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "src": {
      "type": "string"
    },
    "dest": {
      "type": "string"
    },
    "port": {
      "type": "number"
    },
    "url": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "lang": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "logo": {
      "type": "string"
    },
    "faviconText": {
      "type": "string"
    },
    "github": {
      "type": "string"
    },
    "email": {
      "type": "string"
    },
    "image": {
      "anyOf": [
        {
          "const": "",
          "type": "string"
        },
        {
          "const": "github",
          "type": "string"
        },
        {
          "const": "twitter",
          "type": "string"
        },
        {
          "additionalProperties": false,
          "type": "object",
          "properties": {
            "file": {
              "type": "string"
            }
          },
          "required": [
            "file"
          ]
        },
        {
          "type": "string"
        }
      ]
    },
    "og": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "locale": {
          "type": "string"
        }
      }
    },
    "twitter": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "card": {
          "type": "string"
        },
        "site": {
          "type": "string"
        },
        "profile": {
          "type": "string"
        }
      }
    },
    "robots": {
      "type": "string"
    },
    "mermaid": {
      "type": "object",
      "properties": {
        "useAscii": {
          "type": "boolean"
        },
        "paddingX": {
          "type": "number"
        },
        "paddingY": {
          "type": "number"
        },
        "boxBorderPadding": {
          "type": "number"
        }
      }
    },
    "navBar": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "minProperties": 1,
            "maxProperties": 1,
            "additionalProperties": {
              "type": "string"
            }
          }
        ]
      }
    }
  }
}
